                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text=":" />
                                                <TextBlock Text="{Binding Minutes, Converter={StaticResource Int32ToString}}" Margin="2 0" MouseDown="TimePicker_MouseDown" Tag="m" >
                                                    <TextBlock.Style>
                                                        <Style>
                                                            <Setter Property="TextBlock.Background" Value="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"/>
                                                            <Setter Property="TextBlock.Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsMinutesSelected}" Value="True" >
                                                                    <Setter Property="TextBlock.Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                                                                    <Setter Property="TextBlock.Foreground" Value="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </DockPanel>
                                        </Border>
                                    </DockPanel>
                                    <StackPanel Margin="0 0 10 0">
                                        <Button Height="13" Command="{Binding TimePicker.Up}">
                                            <Rectangle Width="10" Height="10">
                                                <Rectangle.Fill>
                                                    <DrawingBrush>
                                                        <DrawingBrush.Drawing>
                                                            <DrawingGroup>
                                                                <GeometryDrawing Brush="#00FFFFFF" Geometry="F1M16,16L0,16 0,0 16,0z" />
                                                                <GeometryDrawing Brush="#FFF6F6F6" Geometry="F1M1.5859,11L7.9999,4.586 14.4139,11z" />
                                                                <GeometryDrawing Brush="#FF424242" Geometry="F1M12,10L4,10 8,6z" />
                                                            </DrawingGroup>
                                                        </DrawingBrush.Drawing>
                                                    </DrawingBrush>
                                                </Rectangle.Fill>
                                            </Rectangle>
                                        </Button>
                                        <Button Height="13" Command="{Binding TimePicker.Down}">
                                            <Rectangle Width="10" Height="10">
                                                <Rectangle.Fill>
                                                    <DrawingBrush>
                                                        <DrawingBrush.Drawing>
                                                            <DrawingGroup>
                                                                <GeometryDrawing Brush="#00FFFFFF" Geometry="F1M16,16L0,16 0,0 16,0z" />
                                                                <GeometryDrawing Brush="#FFF6F6F6" Geometry="F1M1.5859,5L14.4139,5 7.9999,11.414z" />
                                                                <GeometryDrawing Brush="#FF424242" Geometry="F1M8,10L4,6 12,6z" />
                                                            </DrawingGroup>
                                                        </DrawingBrush.Drawing>
                                                    </DrawingBrush>
                                                </Rectangle.Fill>
                                            </Rectangle>
                                        </Button>
                                    </StackPanel>
                                    <Button MinWidth="100" Content="Hinzufügen" Command="{Binding AddPublishTime}" />
                                    <Grid />
                                </DockPanel>-->
                                <ListView ItemsSource="{Binding Template.PublishTimes}">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Wochentag" Width="100" >
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <ComboBox ItemsSource="{Binding WeekDayItems}" SelectedIndex="{Binding DayOfWeek, Converter={StaticResource EnumToInt32Converter}}" />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Header="Zeit" Width="100" >
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding Time.Hours, Converter={StaticResource Int32ToString}, Mode=OneWay}" />
                                                            <StackPanel Margin="5 0 0 0">
                                                                <Button Height="10">
                                                                    <Rectangle Width="8" Height="8">
                                                                        <Rectangle.Fill>
                                                                            <DrawingBrush>
                                                                                <DrawingBrush.Drawing>
                                                                                    <DrawingGroup>
                                                                                        <GeometryDrawing Brush="#00FFFFFF" Geometry="F1M16,16L0,16 0,0 16,0z" />
                                                                                        <GeometryDrawing Brush="#FFF6F6F6" Geometry="F1M1.5859,11L7.9999,4.586 14.4139,11z" />
                                                                                        <GeometryDrawing Brush="#FF424242" Geometry="F1M12,10L4,10 8,6z" />
                                                                                    </DrawingGroup>
                                                                                </DrawingBrush.Drawing>
                                                                            </DrawingBrush>
                                                                        </Rectangle.Fill>
                                                                    </Rectangle>
                                                                </Button>
                                                                <Button Height="10" >
                                                                    <Rectangle Width="8" Height="8">
                                                                        <Rectangle.Fill>
                                                                            <DrawingBrush>
                                                                                <DrawingBrush.Drawing>
                                                                                    <DrawingGroup>
                                                                                        <GeometryDrawing Brush="#00FFFFFF" Geometry="F1M16,16L0,16 0,0 16,0z" />
                                                                                        <GeometryDrawing Brush="#FFF6F6F6" Geometry="F1M1.5859,5L14.4139,5 7.9999,11.414z" />
                                                                                        <GeometryDrawing Brush="#FF424242" Geometry="F1M8,10L4,6 12,6z" />
                                                                                    </DrawingGroup>
                                                                                </DrawingBrush.Drawing>
                                                                            </DrawingBrush>
                                                                        </Rectangle.Fill>
                                                                    </Rectangle>
                                                                </Button>
                                                            </StackPanel>
                                                            <TextBlock Text=":" Margin="5 0"/>
                                                            <TextBlock Text="{Binding Time.Minutes, Converter={StaticResource Int32ToString}, Mode=OneWay}" />
                                                            <StackPanel Margin="5 0 0 0">
                                                                <Button Height="10">
                                                                    <Rectangle Width="8" Height="8">
                                                                        <Rectangle.Fill>
                                                                            <DrawingBrush>
                                                                                <DrawingBrush.Drawing>
                                                                                    <DrawingGroup>
                                                                                        <GeometryDrawing Brush="#00FFFFFF" Geometry="F1M16,16L0,16 0,0 16,0z" />
                                                                                        <GeometryDrawing Brush="#FFF6F6F6" Geometry="F1M1.5859,11L7.9999,4.586 14.4139,11z" />
                                                                                        <GeometryDrawing Brush="#FF424242" Geometry="F1M12,10L4,10 8,6z" />
                                                                                    </DrawingGroup>
                                                                                </DrawingBrush.Drawing>
                                                                            </DrawingBrush>
                                                                        </Rectangle.Fill>
                                                                    </Rectangle>
                                                                </Button>
                                                                <Button Height="10" >
                                                                    <Rectangle Width="8" Height="8">
                                                                        <Rectangle.Fill>
                                                                            <DrawingBrush>
                                                                                <DrawingBrush.Drawing>
                                                                                    <DrawingGroup>
                                                                                        <GeometryDrawing Brush="#00FFFFFF" Geometry="F1M16,16L0,16 0,0 16,0z" />
                                                                                        <GeometryDrawing Brush="#FFF6F6F6" Geometry="F1M1.5859,5L14.4139,5 7.9999,11.414z" />
                                                                                        <GeometryDrawing Brush="#FF424242" Geometry="F1M8,10L4,6 12,6z" />
                                                                                    </DrawingGroup>
                                                                                </DrawingBrush.Drawing>
                                                                            </DrawingBrush>
                                                                        </Rectangle.Fill>
                                                                    </Rectangle>
                                                                </Button>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Header="Tage überspringen" Width="150">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <CheckBox IsChecked="{Binding SkipDays}" />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </DockPanel>
                        </DockPanel>
                    </TabItem>
                    <TabItem Header="Sonstiges">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="175" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Label Content="Kategorie" />
                            <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding CategoryContainer.RegisteredCategories}" DisplayMemberPath="Title" SelectedValue="{Binding Template.Category.Id}" SelectedValuePath="Id" />
                            <Label Grid.Row="2" Content="Videosprache" />
                            <ComboBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding LanguageContainer.RegisteredLanguages}" DisplayMemberPath="Name" SelectedValue="{Binding Template.Language.Id}" SelectedValuePath="Id" />
                            <Label Grid.Row="4" Content="Lizenzen und Eigentumsrechte" />
                            <ComboBox Grid.Row="4" Grid.Column="1" SelectedIndex="{Binding Template.License, Converter={StaticResource EnumToInt32Converter}}" >
                                <ComboBoxItem Content="Standard-Youtube-Lizenz" />
                                <ComboBoxItem Content="Creative-Commons - Namensnennung" />
                            </ComboBox>
                            <CheckBox Grid.Row="6" Content="Einbetten zulassen" Grid.ColumnSpan="2" IsChecked="{Binding Template.IsEmbeddable}" />
                            <CheckBox Grid.Row="8" Content="Videostatistik auf der Wiedergabeseite öffentlich sichtbar machen" Grid.ColumnSpan="2" IsChecked="{Binding Template.PublicStatsViewable}" />
                            <Label Grid.Row="10" Content="Thumbnail" />
                            <DockPanel Grid.Row="10" Grid.Column="1" >
                                <Button DockPanel.Dock="Right" Content="..." Margin="10 0 0 0" Padding="10 0" Width="Auto" />
                                <TextBox Text="{Binding Template.ThumbnailPath}" />
                            </DockPanel>
                            <CheckBox Grid.Row="12" Content="Im Abofeed veröffentlichen und Abonnenten benachrichtigen" Grid.ColumnSpan="2" IsChecked="{Binding Template.NotifySubscribers}" />
                            <CheckBox Grid.Row="14" Content="Helligkeit und Farben automatisch von YouTube verbessern lassen" Grid.ColumnSpan="2" IsChecked="{Binding Template.AutoLevels}" />
                            <CheckBox Grid.Row="16" Content="Bildstabilisierung automatisch von YouTube ausführen lassen" Grid.ColumnSpan="2" IsChecked="{Binding Template.Stabilize}" />
                        </Grid>
                    </TabItem>
                    <TabItem Header="Videos planen">
                        <DockPanel Margin="0 10 10 10">
                            <Label DockPanel.Dock="Top" Content="Dateien" Margin="20 0 0 0"/>
                            <StackPanel DockPanel.Dock="Bottom">
                                <Label Content="Platzhalter ausfüllen" />
                                <ListView Height="200">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Feld" Width="250" />
                                            <GridViewColumn Header="Wert" Width="400" />
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </StackPanel>
                            <StackPanel DockPanel.Dock="Left">
                                <Button Margin="20 0" Width="40" Height="40" Command="{Binding PlannedVideosCommand}" CommandParameter="{x:Static viewmodel:ToolAction.Add}" >
                                    <Image Source="/STFU.AutoUploader.WPF;component/Resources/Plus.png" />
                                </Button>
                                <Button Margin="20 20 20 0" Width="40" Height="40" Command="{Binding PlannedVideosCommand}" CommandParameter="{x:Static viewmodel:ToolAction.Delete}">
                                    <Image Source="/STFU.AutoUploader.WPF;component/Resources/Minus.png" />
                                </Button>
                                <Button Margin="20 20 20 0" Width="40" Height="40" Command="{Binding PlannedVideosCommand}" CommandParameter="{x:Static viewmodel:ToolAction.Clear}">
                                    <Image Source="/STFU.AutoUploader.WPF;component/Resources/X.png" />
                                </Button>
                            </StackPanel>
                            <ListView ItemsSource="{Binding Template.PlannedVideos}">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Dateiname" Width="200" DisplayMemberBinding="{Binding Name}"/>
                                        <GridViewColumn Header="Alles ausgefüllt" Width="200" DisplayMemberBinding="{Binding AllFieldsSet}" />
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </DockPanel>
                    </TabItem>
                    <TabItem Header="C#-Scripting" >
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="100" />
                                <RowDefinition Height="10" />
                                <RowDefinition/>
                                <RowDefinition Height="10" />
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Border BorderThickness="1" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}">
                                <ScrollViewer >
                                    <TextBlock ScrollViewer.CanContentScroll="True" Name="CodeDocumentationBox"/>
                                </ScrollViewer>
                            </Border>
                            <DockPanel Grid.Row="2" >
                                <Label DockPanel.Dock="Top" Content="Globales Vorbereitungsskript" />
                                <controls:FastColoredTextBox Text="{Binding Template.CSharpPreparation}" />
                            </DockPanel>
                            <DockPanel Grid.Row="4" >
                                <Label DockPanel.Dock="Top" Content="Globales Nachbereitungsskript" />
                                <controls:FastColoredTextBox Text="{Binding Template.CSharpCleanUpScript}" />
                            </DockPanel>
                        </Grid>
                    </TabItem>
                </TabControl>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>