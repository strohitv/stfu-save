<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STFU.Executable.AutoUploader.WPF.Windows"
        xmlns:viewmodel="clr-namespace:STFU.Executable.AutoUploader.WPF.ViewModels"
        xmlns:converter="clr-namespace:STFU.Executable.AutoUploader.WPF.Converters"
        xmlns:FastColoredTextBoxNS="clr-namespace:FastColoredTextBoxNS;assembly=FastColoredTextBox"
    xmlns:controls="clr-namespace:STFU.Executable.AutoUploader.WPF.Controls" x:Class="STFU.Executable.AutoUploader.WPF.Windows.TemplateWindow"
        mc:Ignorable="d"
        Title="TemplateWindow" Height="800" Width="1000">
    <Window.Resources>
        <converter:EnumToInt32Converter x:Key="EnumToInt32Converter"/>
        <converter:Int32ToStringConverter x:Key="Int32ToString"/>
        <converter:StringGetLengthConverter x:Key="StringGetLength" />
    </Window.Resources>
    <Window.DataContext>
        <viewmodel:TemplateViewModel />
    </Window.DataContext>
    <DockPanel>
        <StackPanel DockPanel.Dock="Left" Width="80">
            <Button Margin="20 20 20 0" Width="40" Height="40" CommandParameter="{x:Static viewmodel:ToolAction.Add}"  Command="{Binding ToolCommand}">
                <Image Source="/STFU.AutoUploader.WPF;component/Resources/Plus.png" />
            </Button>
            <Button Margin="20 20 20 0" Width="40" Height="40" CommandParameter="{x:Static viewmodel:ToolAction.Clone}"  Command="{Binding ToolCommand}">
                <Image Source="/STFU.AutoUploader.WPF;component/Resources/Clone.png" />
            </Button>
            <Button Margin="20 20 20 0" Width="40" Height="40" CommandParameter="{x:Static viewmodel:ToolAction.MoveUp}"  Command="{Binding ToolCommand}" IsEnabled="{Binding CanSelectedMovedUp}">
                <Image Source="/STFU.AutoUploader.WPF;component/Resources/Up.png" />
            </Button>
            <Button Margin="20 20 20 0" Width="40" Height="40" CommandParameter="{x:Static viewmodel:ToolAction.MoveDown}"  Command="{Binding ToolCommand}" IsEnabled="{Binding CanSelectedMovedDown}">
                <Image Source="/STFU.AutoUploader.WPF;component/Resources/Down.png" />
            </Button>
            <Button Margin="20 20 20 0" Width="40" Height="40" CommandParameter="{x:Static viewmodel:ToolAction.Delete}"  Command="{Binding ToolCommand}" IsEnabled="{Binding HasSelection}">
                <Image Source="/STFU.AutoUploader.WPF;component/Resources/Minus.png" />
            </Button>
            <Button Margin="20 20 20 0" Width="40" Height="40" CommandParameter="{x:Static viewmodel:ToolAction.Clear}" Command="{Binding ToolCommand}">
                <Image Source="/STFU.AutoUploader.WPF;component/Resources/X.png" />
            </Button>
        </StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="3" />
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ListBox Margin="0 10" ItemsSource="{Binding Templates}" DisplayMemberPath="Name" SelectedItem="{Binding Template.Source}" />
            <GridSplitter Grid.Column="1" />
            <DockPanel Grid.Column="2" Margin="10" IsEnabled="{Binding Template.IsSourceSet}">
                <Label DockPanel.Dock="Top" Content="Template bearbeiten" />
                <Grid DockPanel.Dock="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Label Content="Name" />
                    <TextBox Grid.Column="2" Text="{Binding Template.Name}" />
                </Grid>
                <TabControl Margin="0 10 0 0">
                    <TabItem Header="Allgemein">
                        <Grid Margin="10 10 10 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"  />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="2*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Label Content="Titel" />
                            <TextBox x:Name="TBTitle" Grid.Column="1" Text="{Binding Template.Title}" />
                            <Label Grid.Column="1" Grid.Row="1">
                                <DockPanel>
                                    <TextBlock Text="Länge Titel: " />
                                    <TextBlock Text="{Binding Text, Converter={StaticResource StringGetLength}, ElementName=TBTitle}" />
                                    <TextBlock Text=" / " />
                                    <TextBlock Text="100" />
                                    <TextBlock Text=" Zeichen" />
                                </DockPanel>
                            </Label>
                            <Label Grid.Row="2" Grid.ColumnSpan="2" Content="Beschreibung" />
                            <ScrollViewer Grid.Row="3" Grid.ColumnSpan="2" >
                                <TextBox x:Name="TBDescription"  Text="{Binding Template.Description}" TextWrapping="Wrap"  AcceptsReturn="True" AcceptsTab="True" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" SpellCheck.IsEnabled="True"/>
                            </ScrollViewer>
                            <Label Grid.Column="1" Grid.Row="4">
                                <DockPanel>
                                    <TextBlock Text="Länge Beschreibung: " />
                                    <TextBlock Text="{Binding Text, ConverterParameter=5000, Converter={StaticResource StringGetLength}, ElementName=TBDescription}" />
                                    <TextBlock Text=" / " />
                                    <TextBlock Text="5000" />
                                    <TextBlock Text=" Zeichen" />
                                </DockPanel>
                            </Label>
                            <Label Grid.Row="5" Grid.ColumnSpan="2" Content="Tags" />
                            <ScrollViewer Grid.Row="6" Grid.ColumnSpan="2" >
                                <TextBox Name="TBTags" Text="{Binding Template.Tags}" TextWrapping="Wrap"  AcceptsReturn="True" AcceptsTab="True" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto"/>
                            </ScrollViewer>
                            <Label Grid.Column="1" Grid.Row="7">
                                <DockPanel>
                                    <TextBlock Text="Länge Tags: " />
                                    <TextBlock Text="{Binding Text, ConverterParameter=500, Converter={StaticResource StringGetLength}, ElementName=TBTags}" />
                                    <TextBlock Text=" / " />
                                    <TextBlock Text="500" />
                                    <TextBlock Text=" Zeichen" />
                                </DockPanel>
                            </Label>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Veröffentlichung">
                        <DockPanel Margin="10 10 10 0">
                            <DockPanel DockPanel.Dock="Top">
                                <Label Content="Sichtbarkeit" />
                                <ComboBox SelectedIndex="{Binding Template.Privacy, Converter={StaticResource EnumToInt32Converter}}">
                                    <ComboBoxItem Content="Öffentlich" />
                                    <ComboBoxItem Content="Nicht gelistet" />
                                    <ComboBoxItem Content="Privat" />
                                </ComboBox>
                            </DockPanel>
                            <CheckBox DockPanel.Dock="Top" Margin="10" Content="Video geplant veröffentlichen" IsChecked="{Binding Template.ShouldPublishAt}" />
                            <Label DockPanel.Dock="Top" Content="Veröffentlichungszeiten" />
                            <DockPanel>
                                <StackPanel DockPanel.Dock="Left" Width="80">
                                    <Button Margin="20 0" Width="40" Height="40" >
                                        <Image Source="/STFU.AutoUploader.WPF;component/Resources/Plus.png" />
                                    </Button>
                                    <Button Margin="20 20 20 0" Width="40" Height="40" >
                                        <Image Source="/STFU.AutoUploader.WPF;component/Resources/Clone.png" />
                                    </Button>
                                    <Button Margin="20 20 20 0" Width="40" Height="40" >
                                        <Image Source="/STFU.AutoUploader.WPF;component/Resources/Up.png" />
                                    </Button>
                                    <Button Margin="20 20 20 0" Width="40" Height="40">
                                        <Image Source="/STFU.AutoUploader.WPF;component/Resources/Down.png" />
                                    </Button>
                                    <Button Margin="20 20 20 0" Width="40" Height="40">
                                        <Image Source="/STFU.AutoUploader.WPF;component/Resources/Minus.png" />
                                    </Button>
                                    <Button Margin="20 20 20 0" Width="40" Height="40" >
                                        <Image Source="/STFU.AutoUploader.WPF;component/Resources/X.png" />
                                    </Button>
                                </StackPanel>
                                <!--<DockPanel DockPanel.Dock="Bottom" Margin="0 5">
                                    <Label Content="Wochentag:" />
                                    <ComboBox ItemsSource="{Binding WeekDayItems}" SelectedItem="{Binding Template.TemplatedPublishTime.}" />
                                    <Label Content="Zeit:" />
                                    <DockPanel DataContext="{Binding TimePicker}">
                                        <Border BorderThickness="1" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}">
                                            <DockPanel VerticalAlignment="Center" Margin="5 0">
                                                <TextBlock Text="{Binding Hours, Converter={StaticResource Int32ToString}}" Margin="2 0" MouseDown="TimePicker_MouseDown" Tag="h">
                                                    <TextBlock.Style>
                                                        <Style>
                                                            <Setter Property="TextBlock.Background" Value="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"/>
                                                            <Setter Property="TextBlock.Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
